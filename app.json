{
  "expo": {
    "name": "Modern Expo App",
    "slug": "mobile-deploy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.mobiledeploy"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.yourcompany.mobiledeploy",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      },
      "EXPO_PUBLIC_API_URL": "${EXPO_PUBLIC_API_URL}",
      "EXPO_PUBLIC_APP_NAME": "${EXPO_PUBLIC_APP_NAME}",
      "EXPO_PUBLIC_APP_VERSION": "${EXPO_PUBLIC_APP_VERSION}",
      "EXPO_PUBLIC_ENABLE_ANALYTICS": "${EXPO_PUBLIC_ENABLE_ANALYTICS}",
      "EXPO_PUBLIC_ENABLE_DEBUG": "${EXPO_PUBLIC_ENABLE_DEBUG}"
    }
  }
}